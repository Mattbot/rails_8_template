#!/bin/bash

# Install git hooks from .githooks directory

echo "ü™ù Installing git hooks..."

# Create hooks directory if it doesn't exist
mkdir -p .git/hooks

# Install pre-push hook
if [ -f ".githooks/pre-push" ]; then
    cp .githooks/pre-push .git/hooks/pre-push
    chmod +x .git/hooks/pre-push
    echo "‚úÖ Installed pre-push hook (linter)"
fi

# Install other hooks if they exist
for hook in .githooks/*; do
    if [ -f "$hook" ]; then
        hook_name=$(basename "$hook")
        if [ "$hook_name" != "pre-push" ]; then
            cp "$hook" ".git/hooks/$hook_name"
            chmod +x ".git/hooks/$hook_name"
            echo "‚úÖ Installed $hook_name hook"
        fi
    fi
done

echo "üéØ Git hooks installed successfully!"
echo "üí° The pre-push hook will automatically run linter before each push."